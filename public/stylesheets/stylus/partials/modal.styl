
 .modal
   display none
   position fixed
   z-index 1
   padding-top 10rem
   padding-bottom 10rem
   left 0
   top 0
   width 100%
   height 100%
   overflow-y auto
   overflow-x hidden
   background rgba(0,0,0,0.9)
   .wrapper
     width 70%
     margin auto
     background white
     padding 1rem
     cursor pointer
     border-radius 0.4%
     animation-name zoom
     animation-duration 0.6s
     .modal-content
       display inline-block
       width 50%
       // width 100%
      .description
        font-size 22px
        margin 15px
        display inline-block
        width 46%
        vertical-align: top;

 @keyframes zoom
   from
     transform:scale(0)
   to
     transform:scale(1)


 @media only screen and (max-width: screen_width)
   .modal
     margin 0
     padding 0
     .wrapper
       margin 0
       width 100%
       min-height 100%
       border-radius 0
       .modal-content
         margin 0
         padding 0
         width: 100%
         display inherit
       .description
         width 100%
         padding-top 1rem
         margin 0
